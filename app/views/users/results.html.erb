<div class="container" align="center">
	<div class="dash-title">
		<%=@user.active_player.real_name %>'s Results and Rankings
	</div>
	<div class="profile-info">
			<div class="row info-row">
				<div class="col-md-5">
					<div class="profile-img">
						<% if @user.active_player.image.url %>
							<img src="<%=@user.active_player.image%>">
						<% else %>
							<img src="/assets/blank_profile.png">
						<% end %>
					</div>
				</div>
				<div class="col-md-7" align="left">
					<div class="opponent-detail-box">
						<div class="opponent-details">
							Location: <span class="emp"><%= @user.active_player.location %></span>
						</div>
						<div class="opponent-details">
							Overall Record: <span class="emp"><%= @user.active_player.overall_record %></span>
						</div>
						<div class="opponent-details">
							Date Range: <span class="emp"><%= @user.active_player.date_range %></span>
						</div>
					</div>
				</div>
			</div>
	</div>

	<% @players_i_played.each do |player| %>
		<div class="profile-info">
			<div class="sub-dash-title">
				<%=@player.real_name %> vs. <%= player.real_name %>
			</div>
			<% if Match.where(player1_id: @user.active_player.id, player2_id: player.id) != [] %>
				<% Match.where(player1_id: @user.active_player.id, player2_id: player.id).each do |match| %>
					<% if match.score %>
						<div class="match-box">
							<div class="row score-box">
								<a href="<%=match.link%>" target="_blank"><%= match.name %></a>
							</div>
							<div class="row score-box">
								<%= match.date %>
							</div>
							<table class="scoring-table">
								<tr>
									<td>
										<%=@player.real_name%>
										<% if match.result == "Win" %>
											<span><img src="/assets/check.png" class="win-check"></span>
										<% end %>
									</td>
									<% if match.score.include? ';' %>
										<% match.score.split(';').first(3).each do |score| %>
											<td>
												<% if match.result == "Win" %>
													<%= score.split('-').first %>
												<% else %>
													<%= score.split('-').last %>
												<% end %>	
											</td>
										<% end %>
									<% else %>
										<td>
											<% if match.result == "Win" %>
												<%= match.score.split('-').first %>
											<% else %>
												<%= match.score.split('-').last %>
											<% end %>
										</td>
									<% end %>
								</tr>
								<tr>
									<td>
										<%= player.real_name %>
										<% if match.result == "Loss" %>
											<span><img src="/assets/check.png" class="win-check"></span>
										<% end %>
									</td>
									<% if match.score.include? ';' %>
										<% match.score.split(';').first(3).each do |score| %>
											<td>
												<% if match.result == "Win" %>
													<%= score.split('-').last %>
												<% else %>
													<%= score.split('-').first %>
												<% end %>
											</td>
										<% end %>
									<% else %>
										<td>
											<% if match.result == "Win" %>
												<%= match.score.split('-').last %>
											<% else %>
												<%= match.score.split('-').first %>
											<% end %>
										</td>
									<% end %>
								</tr>
							</table>
						</div>
					<% end %>
				<% end %>
			<% end %>
		</div>
	<% end %>

