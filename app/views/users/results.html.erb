<div class="container" align="center">
	<div class="dash-title">
		<%=@user.first_name + " " + @user.last_name %>'s Results and Rankings
	</div>
	<div class="profile-info">
			<div class="row info-row">
				<div class="col-md-5">
					<div class="profile-img">
						<% if @user.player.image %>
							<img src="<%=@user.player.image%>">
						<% else %>
							<img src="/assets/blank_profile.png">
						<% end %>
					</div>
				</div>
				<div class="col-md-7" align="left">
					<div class="opponent-detail-box">
						<div class="opponent-details">
							Location: <span class="emp"><%= @user.player.location %></span>
						</div>
						<div class="opponent-details">
							Overall Record: <span class="emp"><%= @user.player.overall_record %></span>
						</div>
						<div class="opponent-details">
							Date Range: <span class="emp"><%= @user.player.date_range %></span>
						</div>
					</div>
				</div>
			</div>
	</div>
	<% @players_i_played.each do |player| %>
		<div class="profile-info">
			<div class="sub-dash-title">
				<%=@user.first_name + " " + @user.last_name %> vs. <%= player.name.split(", ").last.capitalize + " " + player.name.split(", ").first.capitalize %>
			</div>
			<% if Match.where(player1_id: @user.player.id, player2_id: player.id) != [] %>
				<% Match.where(player1_id: @user.player.id, player2_id: player.id).each do |match| %>
					<% if match.score %>
						<div class="match-box">
							<div class="row score-box">
								<% if match.result == "Win" %>
									<div class="col-md-2">
										<img src="/assets/check.png" class="win-check">
									</div>
								<% else %>
									<div class="col-md-2">
									</div>
								<% end %>
								<div class="col-md-4">
									<%=@user.first_name + " " + @user.last_name %>
								</div>
								<% if match.score.include? ';' %>
									<% match.score.split(';').first(3).each do |score| %>
										<div class="col-md-2">
											<%= score.split('-').first %>
										</div>
									<% end %>
								<% else %>
									<div class="col-md-2">
										<%= match.score.split('-').first %>
									</div>
								<% end %>
							</div>
							<div class="row score-box">
								<% if match.result == "Loss" %>
									<div class="col-md-2">
										<img src="/assets/check.png" class="win-check">
									</div>
								<% else %>
									<div class="col-md-2">
									</div>
								<% end %>
								<div class="col-md-4">
									<%= player.name.split(", ").last.capitalize + " " + player.name.split(", ").first.capitalize %>
								</div>
								<% if match.score.include? ';' %>
									<% match.score.split(';').first(3).each do |score| %>
										<div class="col-md-2">
											<%= score.split('-').last %>
										</div>
									<% end %>
								<% else %>
									<div class="col-md-2">
										<%= match.score.split('-').last %>
									</div>
								<% end %>
							</div>
						</div>
					<% end %>
				<% end %>
			<% end %>
		</div>
	<% end %>
