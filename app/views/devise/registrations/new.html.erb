<div class="container" align="center">
	<div class="devise-title">Sign up</div>

	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
	  <%= devise_error_messages! %>
	  <div class="row">
	  	<div class="col-md-3">
	  	</div>
	  	<div class="col-md-3">
	  		<div><%= f.label :first_name, "Player First Name" %><br />
	  		<%= f.text_field :first_name %></div>
	  	</div>
	  	<div class="col-md-3">
	  		<div><%= f.label :last_name, "Player Last Name" %><br />
	  		<%= f.text_field :last_name %></div>
	  	</div>
	  	<div class="col-md-3">
	  	</div>
	  </div>
	  <div class="row">
	  	<div class="col-md-3">
	  	</div>
	  	<div class="col-md-3">
	  		<div><%= f.label :usta_id, "Player USTA #" %><br />
	  		<%= f.text_field :usta_id, data_toggle: "tooltip", title: "Your 10-digit id from the USTA" %></div>
	  	</div>
	  	<div class="col-md-3">
	  		<div><%= f.label :email %><br />
	  		<%= f.email_field :email, :autofocus => true %></div>
	  	</div>
	  	<div class="col-md-3">
	  	</div>
	  </div>
	  <div class="row">
	  	<div class="col-md-3">
	  	</div>
	  	<div class="col-md-3">
	  		<div><%= f.label :password %><br />
	  		<%= f.password_field :password, data_toggle: "tooltip", title: "A valid password has at least 8 characters" %></div>
	  	</div>
	  	<div class="col-md-3">
	  		<div><%= f.label :password_confirmation, "Confirm your password" %><br />
	  		<%= f.password_field :password_confirmation, data_toggle: "tooltip", title: "Make sure this matches your pasword" %></div>
	  	</div>
	  	<div class="col-md-3">
	  	</div>
	  </div>
	  <div class="row" align="center">
	  	&#42; By clicking to sign up, you confirm that you are at least 13 years of age and agree to our <a href="<%=privacy_path%>">Privacy Policy</a>.
	  </div>
	  <div><%= f.submit "Sign up" %></div>
	<% end %>

	<%= render "devise/shared/links" %>
</div>
<script type="text/javascript">
$('#user_password').tooltip({
	placement: "left"
})
$('#user_password_confirmation').tooltip({
	placement: "right"
})
$('#user_usta_id').tooltip({
	placement: "left"
})
</script>