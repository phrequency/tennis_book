<div class="container" align="center">
	<div class="devise-title">Sign up</div>

	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
	  <%= devise_error_messages! %>
	  <div class="row">
	  	<div class="col-md-3">
	  	</div>
	  	<div class="col-md-3">
	  		<div><%= f.label :first_name, "Player First Name" %><br />
	  		<%= f.text_field :first_name %></div>
	  	</div>
	  	<div class="col-md-3">
	  		<div><%= f.label :last_name, "Player Last Name" %><br />
	  		<%= f.text_field :last_name %></div>
	  	</div>
	  	<div class="col-md-3">
	  	</div>
	  </div>
	  <div class="row">
	  	<div class="col-md-3">
	  	</div>
	  	<div class="col-md-3">
	  		<div><%= f.label :email %><br />
	  		<%= f.email_field :email, :autofocus => true %></div>
	  	</div>
	  	<div class="col-md-3">
	  		<div><%= f.label :usta_id, "Player USTA #" %><br />
	  		<%= f.text_field :usta_id %></div>
	  	</div>
	  	<div class="col-md-3">
	  	</div>
	  </div>
	  <div class="row">
	  	<div class="col-md-3">
	  	</div>
	  	<div class="col-md-3">
	  		<div><%= f.label :password %><br />
	  		<%= f.password_field :password %></div>
	  	</div>
	  	<div class="col-md-3">
	  		<div><%= f.label :password_confirmation, "Confirm your password" %><br />
	  		<%= f.password_field :password_confirmation %></div>
	  	</div>
	  	<div class="col-md-3">
	  	</div>
	  </div>
	  <div><%= f.submit "Sign up" %></div>
	<% end %>

	<%= render "devise/shared/links" %>
</div>