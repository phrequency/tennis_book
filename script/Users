Users

:name, :email, :password, :usta_id

has_one :player





Players

:name, :usta_id, user_id

has_many :own_matches, foreign_key: "player1_id", class_name: "Match"
has_many :other_matches, foreign_key: "player2_id", class_name: "Match"

def all_matches
	Match.where('player1_id = :player_id OR player2_id = :player_id', player_id: self.id)
end





Matches

:player1_id, :player2_id, :result, :score, :name

belongs_to :player, foreign_key: 'player1_id', class_name: 'Player'
belongs_to :opponent, foreign_key: 'player2_id', class_name: 'Player'









